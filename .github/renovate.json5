{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":ignoreUnstable",
    ":separateMajorReleases",
    ":maintainLockFilesWeekly",
    "docker:enableMajor",
    ":semanticCommits",
    ":enableVulnerabilityAlertsWithLabel"
  ],
  "assignees": [
    "gaodes"
  ],
  "assignAutomerge": false,
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "github-actions",
    "pip_requirements",
    "regex"
  ],
  "timezone": "Europe/Bucharest",
  "dependencyDashboard": true,
  "automergeType": "pr",
  "automergeStrategy": "merge-commit",
  "rebaseWhen": "conflicted",
  "rangeStrategy": "pin",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 25,
  "schedule": [
    "at any time"
  ],
  "automerge": true,
  "automergeSchedule": [
    "at any time"
  ],
  "ignoreTests": true,
  "platformAutomerge": true,
  "recreateWhen": "always",
  "prCreation": "immediate",
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "enabled": true
    },
    {
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "enabled": true
    },
    {
      "description": "Match Alpine packages in Dockerfile",
      "matchDatasources": ["repology"],
      "matchPackagePatterns": [".*"],
      "matchDepTypes": ["alpine_package"],
      "enabled": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "apk add --no-cache [\\s\\S]*?(?<depName>[a-z0-9-]+)=(?<currentValue>[\\d\\.]+(-r\\d+))"
      ],
      "datasourceTemplate": "repology",
      "depNameTemplate": "{{{depName}}}",
      "packageNameTemplate": "alpine_3_18/{{{depName}}}",
      "versioningTemplate": "loose"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "\\s+(?<depName>[a-zA-Z0-9_-]+)==(?<currentValue>[\\d\\.]+)\\s*\\\\"
      ],
      "datasourceTemplate": "pypi",
      "versioningTemplate": "pep440"
    }
  ]
}